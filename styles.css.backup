/* Upcoming Tasks */
.upcoming-tasks {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-sm);
}

.upcoming-task {
    background: linear-gradient(135deg, 
        rgba(255, 255, 255, 0.9) 0%, 
        rgba(248, 252, 255, 0.8) 100%);
    padding: 20px;
    border-radius: 16px;
    border-left: 4px solid var(--hunyadi-yellow);
    cursor: pointer;
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    border: 1px solid rgba(255, 255, 255, 0.6);
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.06), 
                0 4px 12px rgba(0, 0, 0, 0.04);
    margin-bottom: 16px;
    backdrop-filter: blur(12px);
    -webkit-backdrop-filter: blur(12px);
    position: relative;
    overflow: hidden;
}

.upcoming-task::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 4px;
    height: 100%;
    background: linear-gradient(180deg, 
        var(--hunyadi-yellow) 0%, 
        var(--amaranth) 100%);
    transition: width 0.3s ease;
}

.upcoming-task:hover::before {
    width: 8px;
}

.upcoming-task:hover {
    transform: translateY(-3px) scale(1.015);
    box-shadow: 0 12px 32px rgba(237, 174, 73, 0.25), 
                0 6px 16px rgba(237, 174, 73, 0.15);
    border-left-color: var(--amaranth);
}

.upcoming-task:active {
    transform: translateY(-1px) scale(1.01);
    transition: all 0.1s ease;
}

.upcoming-task-title {
    font-size: 16px;
    font-weight: 700;
    color: var(--paynes-gray);
    margin-bottom: 8px;
    line-height: 1.3;
    letter-spacing: -0.01em;
}

.upcoming-task-date {
    font-size: 0.8rem;
    color: var(--text-secondary);
    font-weight: 500;
}

.no-upcoming {
    text-align: center;
    color: var(--text-muted);
    font-style: italic;
    padding: var(--spacing-lg);
    background: rgba(237, 174, 73, 0.05);
    border-radius: var(--radius-md);
    border: 2px dashed rgba(237, 174, 73, 0.2);
}

/* Safari-specific fixes */
@supports (-webkit-appearance: none) {
    .task-buttons button {
        -webkit-appearance: none;
        appearance: none;
        -webkit-border-radius: var(--radius-sm);
        border-radius: var(--radius-sm);
    }
    
    .task-description {
        -webkit-hyphens: auto;
        hyphens: auto;
    }
    
    .task-title {
        -webkit-line-clamp: none;
        line-clamp: none;
        -webkit-box-orient: vertical;
    }
}

/* Modal Styles - Apple Design */
.modal {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.3);
    backdrop-filter: blur(8px);
    display: flex;
    justify-content: center;
    align-items: center;
    z-index: 1000;
    animation: modalFadeIn 0.2s ease-out;
}

.modal.hidden {
    display: none !important;
}

@keyframes modalFadeIn {
    from {
        opacity: 0;
        transform: scale(0.95);
    }
    to {
        opacity: 1;
        transform: scale(1);
    }
}

.modal-content {
    background-color: var(--bg-primary);
    padding: var(--spacing-xl);
    border-radius: var(--radius-lg);
    max-width: 480px;
    width: 90%;
    max-height: 80vh;
    overflow-y: auto;
    position: relative;
    box-shadow: var(--shadow-heavy);
    border: 1px solid var(--border-color);
    animation: modalSlideIn 0.3s ease-out;
}

@keyframes modalSlideIn {
    from {
        opacity: 0;
        transform: translateY(-20px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

.close-btn {
    position: absolute;
    top: var(--spacing-md);
    right: var(--spacing-md);
    width: 32px;
    height: 32px;
    border-radius: 50%;
    background-color: var(--bg-tertiary);
    border: none;
    cursor: pointer;
    color: var(--text-secondary);
    font-size: 1.25rem;
    font-weight: 400;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.2s ease;
}

.close-btn:hover {
    background-color: var(--cadet-gray);
    color: var(--text-primary);
    transform: scale(1.05);
}

.modal-content h3 {
    margin: 0 0 var(--spacing-lg) 0;
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--text-primary);
    letter-spacing: -0.01em;
}

.modal-task {
    padding: var(--spacing-sm);
    margin: var(--spacing-sm) 0;
    border-left: 3px solid;
    background-color: var(--bg-tertiary);
    border-radius: var(--radius-sm);
