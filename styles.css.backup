    }
}

/* End of agenda styles */
.agenda-container {
    max-width: 1400px;
    margin: 0 auto;
    padding: var(--agenda-space-6);
    display: grid;
    grid-template-rows: auto auto 1fr;
    gap: var(--agenda-space-6);
    min-height: calc(100vh - 3rem);
}

/* Header Section */
.agenda-header {
    background: var(--agenda-bg-primary);
    border-radius: var(--agenda-radius-2xl);
    padding: var(--agenda-space-6) var(--agenda-space-8);
    box-shadow: var(--agenda-shadow-lg);
    border: 1px solid var(--agenda-border);
}

.header-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: var(--agenda-space-4);
}

.agenda-title {
    display: flex;
    align-items: center;
    gap: var(--agenda-space-3);
    margin: 0;
    color: var(--agenda-primary);
    font-size: 1.875rem;
    font-weight: 700;
}

.agenda-icon {
    font-size: 2rem;
}

.title-text {
    background: linear-gradient(135deg, var(--agenda-primary), var(--agenda-accent));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
}

.btn-add-task-header {
    display: flex;
    align-items: center;
    gap: var(--agenda-space-2);
    background: linear-gradient(135deg, var(--agenda-primary), #3b82f6);
    color: white;
    border: none;
    padding: var(--agenda-space-3) var(--agenda-space-6);
    border-radius: var(--agenda-radius-lg);
    font-weight: 600;
    cursor: pointer;
    transition: all 0.2s ease;
    box-shadow: var(--agenda-shadow-md);
}

.btn-add-task-header:hover {
    transform: translateY(-2px);
    box-shadow: var(--agenda-shadow-xl);
}

/* Filters Section */
.agenda-filters-section {
    background: var(--agenda-bg-primary);
    border-radius: var(--agenda-radius-2xl);
    padding: var(--agenda-space-6);
    box-shadow: var(--agenda-shadow-lg);
    border: 1px solid var(--agenda-border);
}

.filters-wrapper {
    display: grid;
    gap: var(--agenda-space-5);
}

.filters-row {
    display: grid;
    grid-template-columns: 1fr 1fr 2fr;
    gap: var(--agenda-space-4);
    align-items: end;
}

.filter-group {
    display: flex;
    flex-direction: column;
    gap: var(--agenda-space-2);
}

.filter-label {
    display: flex;
    align-items: center;
    gap: var(--agenda-space-2);
    font-weight: 600;
    color: var(--agenda-secondary);
    font-size: 0.875rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
}

.filter-icon {
    font-size: 1rem;
}

.filter-select {
    padding: var(--agenda-space-3) var(--agenda-space-4);
    border: 2px solid var(--agenda-border);
    border-radius: var(--agenda-radius-lg);
    background: var(--agenda-bg-secondary);
    color: var(--agenda-secondary);
    font-weight: 500;
    cursor: pointer;
    transition: all 0.2s ease;
    font-size: 0.875rem;
}

.filter-select:hover,
.filter-select:focus {
    border-color: var(--agenda-primary);
    outline: none;
    box-shadow: 0 0 0 3px rgba(37, 99, 235, 0.1);
}

.filter-search {
    position: relative;
}

.search-input {
    width: 100%;
    padding: var(--agenda-space-3) var(--agenda-space-10) var(--agenda-space-3) var(--agenda-space-4);
    border: 2px solid var(--agenda-border);
    border-radius: var(--agenda-radius-lg);
    background: var(--agenda-bg-secondary);
    color: var(--agenda-secondary);
    font-size: 0.875rem;
    transition: all 0.2s ease;
}

.search-input:hover,
.search-input:focus {
    border-color: var(--agenda-primary);
    outline: none;
    box-shadow: 0 0 0 3px rgba(37, 99, 235, 0.1);
}

.search-icon {
    position: absolute;
    right: var(--agenda-space-3);
    top: 50%;
    transform: translateY(-50%);
    color: var(--agenda-secondary);
    font-size: 1rem;
}

/* Stats Row */
.stats-row {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: var(--agenda-space-4);
}

.stat-badge {
    background: linear-gradient(135deg, var(--agenda-bg-secondary), var(--agenda-bg-tertiary));
    padding: var(--agenda-space-4);
    border-radius: var(--agenda-radius-lg);
    text-align: center;
    border: 1px solid var(--agenda-border);
    transition: all 0.2s ease;
}

.stat-badge:hover {
    transform: translateY(-2px);
    box-shadow: var(--agenda-shadow-md);
}

.stat-badge.total {
    border-left: 4px solid var(--agenda-primary);
}

.stat-badge.pending {
    border-left: 4px solid var(--agenda-warning);
}

.stat-badge.completed {
    border-left: 4px solid var(--agenda-success);
}

.stat-number {
    display: block;
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--agenda-primary);
    margin-bottom: var(--agenda-space-1);
}

.stat-label {
    font-size: 0.75rem;
    color: var(--agenda-secondary);
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.05em;
}

/* Main Content Area */
.agenda-main-content {
    display: grid;
    gap: var(--agenda-space-6);
}

.content-grid {
    display: grid;
    grid-template-columns: 2fr 1fr;
    gap: var(--agenda-space-6);
    align-items: start;
}

/* Tasks Section */
.tasks-section {
    background: var(--agenda-bg-primary);
    border-radius: var(--agenda-radius-2xl);
    padding: var(--agenda-space-6);
    box-shadow: var(--agenda-shadow-lg);
    border: 1px solid var(--agenda-border);
    min-height: 600px;
}

.section-header {
    margin-bottom: var(--agenda-space-6);
}

.section-title {
    display: flex;
    align-items: center;
    gap: var(--agenda-space-3);
    margin: 0;
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--agenda-primary);
}

.section-icon {
    font-size: 1.5rem;
}

.task-list-container {
    max-height: 70vh;
    overflow-y: auto;
    padding-right: var(--agenda-space-2);
}

.task-list-container::-webkit-scrollbar {
    width: 6px;
}

.task-list-container::-webkit-scrollbar-track {
    background: var(--agenda-bg-tertiary);
    border-radius: var(--agenda-radius-sm);
}

.task-list-container::-webkit-scrollbar-thumb {
    background: var(--agenda-border);
    border-radius: var(--agenda-radius-sm);
}

.task-list-container::-webkit-scrollbar-thumb:hover {
    background: var(--agenda-secondary);
}

.task-list {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: var(--agenda-space-4);
}

/* Sidebar Section */
.sidebar-section {
    background: var(--agenda-bg-primary);
    border-radius: var(--agenda-radius-2xl);
    padding: var(--agenda-space-6);
    box-shadow: var(--agenda-shadow-lg);
    border: 1px solid var(--agenda-border);
    position: sticky;
    top: var(--agenda-space-6);
}

.sidebar-content {
    display: flex;
    flex-direction: column;
    gap: var(--agenda-space-6);
}

.sidebar-block {
    padding-bottom: var(--agenda-space-6);
    border-bottom: 1px solid var(--agenda-border);
}

.sidebar-block:last-child {
    border-bottom: none;
    padding-bottom: 0;
}

.sidebar-title {
    display: flex;
    align-items: center;
    gap: var(--agenda-space-2);
    margin: 0 0 var(--agenda-space-4) 0;
    font-size: 1.125rem;
    font-weight: 600;
    color: var(--agenda-primary);
}

.sidebar-icon {
    font-size: 1.125rem;
}

/* Quick Actions */
.quick-actions {
    display: flex;
    flex-direction: column;
    gap: var(--agenda-space-3);
}

.btn-action {
    display: flex;
    align-items: center;
    gap: var(--agenda-space-2);
    padding: var(--agenda-space-3) var(--agenda-space-4);
    border: none;
    border-radius: var(--agenda-radius-lg);
    font-weight: 500;
    cursor: pointer;
    transition: all 0.2s ease;
    text-align: left;
}

.btn-action.primary {
    background: linear-gradient(135deg, var(--agenda-primary), #3b82f6);
    color: white;
    box-shadow: var(--agenda-shadow-md);
}

.btn-action.secondary {
    background: var(--agenda-bg-secondary);
    color: var(--agenda-secondary);
    border: 1px solid var(--agenda-border);
}

.btn-action:hover {
    transform: translateY(-1px);
}

.btn-action.primary:hover {
    box-shadow: var(--agenda-shadow-lg);
}

.btn-action.secondary:hover {
    background: var(--agenda-bg-tertiary);
    box-shadow: var(--agenda-shadow-sm);
}

/* Stats Overview */
.stats-overview {
    display: flex;
    flex-direction: column;
    gap: var(--agenda-space-4);
}

.stat-item {
    display: flex;
    flex-direction: column;
    gap: var(--agenda-space-2);
}

.stat-item .stat-value {
    font-size: 1.25rem;
    font-weight: 700;
    color: var(--agenda-primary);
}

.stat-item .stat-label {
    font-size: 0.75rem;
    color: var(--agenda-secondary);
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.05em;
}

.stat-progress {
    height: 4px;
    background: var(--agenda-bg-tertiary);
    border-radius: var(--agenda-radius-sm);
    overflow: hidden;
}

.progress-bar {
    height: 100%;
    background: linear-gradient(90deg, var(--agenda-primary), var(--agenda-accent));
    border-radius: var(--agenda-radius-sm);
    transition: width 0.3s ease;
}

.stat-item.completed .progress-bar {
    background: linear-gradient(90deg, var(--agenda-success), #34d399);
}

.stat-item.pending .progress-bar {
    background: linear-gradient(90deg, var(--agenda-warning), #fbbf24);
}

/* Upcoming Tasks */
.upcoming-tasks {
    display: flex;
    flex-direction: column;
    gap: var(--agenda-space-3);
}

.upcoming-task {
    padding: var(--agenda-space-3);
    background: var(--agenda-bg-secondary);
    border-radius: var(--agenda-radius-lg);
    border-left: 3px solid var(--agenda-accent);
    cursor: pointer;
    transition: all 0.2s ease;
}

.upcoming-task:hover {
    background: var(--agenda-bg-tertiary);
    transform: translateX(2px);
    box-shadow: var(--agenda-shadow-sm);
}

.upcoming-task-title {
    font-weight: 500;
    color: var(--agenda-secondary);
    font-size: 0.875rem;
    margin-bottom: var(--agenda-space-1);
}

.upcoming-task-date {
    font-size: 0.75rem;
    color: var(--agenda-accent);
    font-weight: 600;
}

/* Responsive Design */
@media (max-width: 1024px) {
    .content-grid {
        grid-template-columns: 1fr;
        gap: var(--agenda-space-4);
    }
    
    .sidebar-section {
        position: static;
        order: -1;
    }
    
    .sidebar-content {
        flex-direction: row;
        overflow-x: auto;
        gap: var(--agenda-space-8);
    }
    
    .sidebar-block {
        flex-shrink: 0;
        min-width: 200px;
        border-bottom: none;
        border-right: 1px solid var(--agenda-border);
        padding-right: var(--agenda-space-6);
        padding-bottom: 0;
    }
    
    .sidebar-block:last-child {
        border-right: none;
        padding-right: 0;
    }
}

@media (max-width: 768px) {
    .agenda-container {
        padding: var(--agenda-space-4);
        gap: var(--agenda-space-4);
    }
    
    .header-content {
        flex-direction: column;
        text-align: center;
        gap: var(--agenda-space-4);
    }
    
    .agenda-title {
        font-size: 1.5rem;
    }
    
    .filters-row {
        grid-template-columns: 1fr;
        gap: var(--agenda-space-4);
    }
    
    .stats-row {
        grid-template-columns: 1fr;
        gap: var(--agenda-space-3);
    }
    
    .tasks-section {
        min-height: 400px;
    }
    
    .sidebar-content {
        flex-direction: column;
        gap: var(--agenda-space-4);
    }
    
    .sidebar-block {
        border-right: none;
        border-bottom: 1px solid var(--agenda-border);
        padding-right: 0;
        padding-bottom: var(--agenda-space-4);
    }
}

@media (max-width: 480px) {
    .agenda-container {
        padding: var(--agenda-space-3);
        gap: var(--agenda-space-3);
    }
    
    .agenda-header,
    .agenda-filters-section,
    .tasks-section,
    .sidebar-section {
        padding: var(--agenda-space-4);
        border-radius: var(--agenda-radius-xl);
    }
    
    .agenda-title {
        font-size: 1.25rem;
    }
    
    .section-title {
        font-size: 1.25rem;
    }
}/* ========================================
   TASK CARDS - MODERN DESIGN
   ======================================== */

/* Task Date Groups */
.task-date-group {
    list-style: none;
    margin-bottom: var(--agenda-space-6);
}

.date-group-header {
    display: flex;
    align-items: center;
    gap: var(--agenda-space-3);
    padding: var(--agenda-space-4) var(--agenda-space-5);
    margin-bottom: var(--agenda-space-4);
    background: linear-gradient(135deg, var(--agenda-bg-secondary), var(--agenda-bg-tertiary));
    border-radius: var(--agenda-radius-lg);
    border: 1px solid var(--agenda-border);
    position: relative;
}

.date-group-icon {
    font-size: 1.25rem;
}

.date-group-title {
    flex: 1;
    margin: 0;
    font-size: 1.125rem;
    font-weight: 600;
    color: var(--agenda-primary);
}

.date-group-count {
    background: var(--agenda-primary);
    color: white;
    padding: var(--agenda-space-1) var(--agenda-space-3);
    border-radius: var(--agenda-radius-md);
    font-size: 0.75rem;
    font-weight: 600;
    min-width: 24px;
    text-align: center;
}

.date-group-tasks {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: var(--agenda-space-3);
}

/* Task Cards */
.task-card {
    background: var(--agenda-bg-primary);
    border-radius: var(--agenda-radius-xl);
    border: 1px solid var(--agenda-border);
    box-shadow: var(--agenda-shadow-sm);
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    position: relative;
    overflow: hidden;
    list-style: none;
}

.task-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 4px;
    height: 100%;
    background: linear-gradient(180deg, var(--agenda-primary), var(--agenda-accent));
    transition: width 0.3s ease;
}

.task-card.completed::before {
    background: linear-gradient(180deg, var(--agenda-success), #34d399);
}

.task-card:hover {
    transform: translateY(-2px);
    box-shadow: var(--agenda-shadow-lg);
    border-color: var(--agenda-primary);
}

.task-card:hover::before {
    width: 6px;
}

.task-card.completed {
    opacity: 0.7;
    background: linear-gradient(135deg, var(--agenda-bg-secondary), var(--agenda-bg-tertiary));
}

.task-card.completed:hover {
    opacity: 0.85;
}

.task-card-content {
    padding: var(--agenda-space-5);
    display: flex;
    flex-direction: column;
    gap: var(--agenda-space-3);
}

.task-card-header {
    display: flex;
    gap: var(--agenda-space-4);
    align-items: flex-start;
}

.task-card-check {
    flex-shrink: 0;
}

.task-check-btn {
    width: 24px;
    height: 24px;
    border: 2px solid var(--agenda-border);
    border-radius: var(--agenda-radius-sm);
    background: var(--agenda-bg-primary);
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.2s ease;
    position: relative;
}

.task-check-btn:hover {
    border-color: var(--agenda-primary);
    transform: scale(1.1);
}

.task-check-btn.checked {
    background: var(--agenda-success);
    border-color: var(--agenda-success);
    color: white;
}

.check-icon {
    font-size: 0.75rem;
    font-weight: 700;
}

.task-card-body {
    flex: 1;
    min-width: 0;
}

.task-card-title-row {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    gap: var(--agenda-space-3);
    margin-bottom: var(--agenda-space-2);
}

.task-card-title {
    margin: 0;
    font-size: 1.125rem;
    font-weight: 600;
    color: var(--agenda-primary);
    line-height: 1.4;
    flex: 1;
}

.task-card-title.completed {
    text-decoration: line-through;
    color: var(--agenda-secondary);
}

.task-card-badges {
    display: flex;
    gap: var(--agenda-space-2);
    flex-shrink: 0;
}

.badge {
    padding: var(--agenda-space-1) var(--agenda-space-2);
    border-radius: var(--agenda-radius-md);
    font-size: 0.75rem;
    font-weight: 500;
    display: flex;
    align-items: center;
    gap: var(--agenda-space-1);
}

.badge.priority {
    background: var(--agenda-bg-tertiary);
    color: var(--agenda-secondary);
    border: 1px solid var(--agenda-border);
}

.badge.priority.high {
    background: rgba(239, 68, 68, 0.1);
    color: var(--agenda-danger);
    border-color: var(--agenda-danger);
}

.badge.priority.medium {
    background: rgba(245, 158, 11, 0.1);
    color: var(--agenda-warning);
    border-color: var(--agenda-warning);
}

.badge.priority.low {
    background: rgba(16, 185, 129, 0.1);
    color: var(--agenda-success);
    border-color: var(--agenda-success);
}

.badge.reminder {
    background: rgba(37, 99, 235, 0.1);
    color: var(--agenda-primary);
    border: 1px solid var(--agenda-primary);
}

.task-card-description {
    margin: 0 0 var(--agenda-space-3) 0;
    color: var(--agenda-secondary);
    font-size: 0.875rem;
    line-height: 1.5;
}

.task-card-meta {
    display: flex;
    gap: var(--agenda-space-4);
    align-items: center;
    flex-wrap: wrap;
}

.meta-item {
    display: flex;
    align-items: center;
    gap: var(--agenda-space-1);
    font-size: 0.75rem;
    color: var(--agenda-secondary);
    font-weight: 500;
}

.meta-item.time {
    color: var(--agenda-accent);
}

.meta-item.date {
    color: var(--agenda-primary);
}

.meta-icon {
    font-size: 0.875rem;
}

.task-card-actions {
    display: flex;
    gap: var(--agenda-space-2);
    justify-content: flex-end;
    margin-top: var(--agenda-space-2);
    padding-top: var(--agenda-space-3);
    border-top: 1px solid var(--agenda-border);
    opacity: 0;
    transition: opacity 0.2s ease;
}

.task-card:hover .task-card-actions {
    opacity: 1;
}

.task-action-btn {
    padding: var(--agenda-space-2) var(--agenda-space-3);
    border: none;
    border-radius: var(--agenda-radius-md);
    cursor: pointer;
    font-size: 0.75rem;
    font-weight: 500;
    transition: all 0.2s ease;
    display: flex;
    align-items: center;
    gap: var(--agenda-space-1);
}

.task-action-btn.edit {
    background: rgba(37, 99, 235, 0.1);
    color: var(--agenda-primary);
}

.task-action-btn.edit:hover {
    background: rgba(37, 99, 235, 0.2);
    transform: translateY(-1px);
}

.task-action-btn.delete {
    background: rgba(239, 68, 68, 0.1);
    color: var(--agenda-danger);
}

.task-action-btn.delete:hover {
    background: rgba(239, 68, 68, 0.2);
    transform: translateY(-1px);
}

.action-icon {
    font-size: 0.875rem;
}

/* Empty State */
.empty-state {
    text-align: center;
    padding: var(--agenda-space-12);
    color: var(--agenda-secondary);
}

.empty-state-animation {
    position: relative;
    margin-bottom: var(--agenda-space-6);
    display: flex;
    justify-content: center;
    align-items: center;
    height: 120px;
}

.empty-state-icon {
    font-size: 4rem;
    opacity: 0.5;
    z-index: 2;
    position: relative;
}

.empty-state-circles {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
}

.circle {
    position: absolute;
    border: 2px solid var(--agenda-border);
    border-radius: 50%;
    animation: pulse 2s infinite;
}

.circle-1 {
    width: 60px;
    height: 60px;
    animation-delay: 0s;
}

.circle-2 {
    width: 80px;
    height: 80px;
    animation-delay: 0.5s;
}

.circle-3 {
    width: 100px;
    height: 100px;
    animation-delay: 1s;
}

@keyframes pulse {
    0%, 100% {
        opacity: 0;
        transform: translate(-50%, -50%) scale(0.8);
    }
    50% {
        opacity: 0.3;
        transform: translate(-50%, -50%) scale(1);
    }
}

.empty-state-title {
    margin: 0 0 var(--agenda-space-3) 0;
    font-size: 1.5rem;
    font-weight: 600;
    color: var(--agenda-primary);
}

.empty-state-description {
    margin: 0 0 var(--agenda-space-6) 0;
    color: var(--agenda-secondary);
    font-size: 1rem;
    line-height: 1.5;
    max-width: 400px;
    margin-left: auto;
    margin-right: auto;
}

.empty-state-btn {
    display: inline-flex;
    align-items: center;
    gap: var(--agenda-space-2);
    background: linear-gradient(135deg, var(--agenda-primary), #3b82f6);
    color: white;
    border: none;
    padding: var(--agenda-space-4) var(--agenda-space-6);
    border-radius: var(--agenda-radius-lg);
    font-weight: 600;
    cursor: pointer;
    transition: all 0.2s ease;
    box-shadow: var(--agenda-shadow-md);
}

.empty-state-btn:hover {
    transform: translateY(-2px);
    box-shadow: var(--agenda-shadow-xl);
}

/* Touch devices - always show action buttons */
@media (hover: none) {
    .task-card-actions {
        opacity: 1;
    }
}

/* Mobile optimizations for task cards */
@media (max-width: 768px) {
    .task-card-content {
        padding: var(--agenda-space-4);
    }
    
    .task-card-title-row {
        flex-direction: column;
        gap: var(--agenda-space-2);
    }
    
    .task-card-badges {
        align-self: flex-start;
    }
    
    .task-card-meta {
        flex-direction: column;
        align-items: flex-start;
        gap: var(--agenda-space-2);
    }
    
    .task-card-actions {
        opacity: 1;
        justify-content: center;
    }
}/* End of styles */