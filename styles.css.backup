    /* Calendar Desktop Layout */
    .calendar-grid {
        gap: var(--spacing-md);
        margin: var(--spacing-xl) 0;
    }
    
    .calendar-grid .day {
        min-height: 120px;
        padding: var(--spacing-md);
        border-radius: var(--radius-md);
        transition: all 0.3s ease;
        position: relative;
        overflow: hidden;
    }
    
    .calendar-grid .day:hover {
        transform: translateY(-2px);
        box-shadow: var(--shadow-medium);
        background-color: var(--mint-green);
    }
    
    .calendar-grid .day.today {
        background: linear-gradient(135deg, var(--hunyadi-yellow), #f4c430);
        color: white;
        font-weight: 600;
        box-shadow: var(--shadow-medium);
    }
    
    .calendar-grid .day.has-tasks {
        border-left: 4px solid var(--amaranth);
        background-color: rgba(209, 73, 91, 0.05);
    }
    
    .calendar-grid .day.has-tasks:hover {
        background-color: rgba(209, 73, 91, 0.1);
        border-left-color: var(--amaranth);
    }
    
    /* Day content improvements */
    .day-content {
        height: 100%;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        position: relative;
    }
    
    .day-number {
        font-weight: 600;
        font-size: 1.1rem;
        margin-bottom: var(--spacing-xs);
    }
    
    .day-tasks {
        flex: 1;
        display: flex;
        flex-direction: column;
        gap: 2px;
        font-size: 0.75rem;
        line-height: 1.2;
    }
    
    .task-preview {
        background-color: rgba(237, 174, 73, 0.2);
        padding: 2px 4px;
        border-radius: 3px;
        color: var(--text-primary);
        font-weight: 500;
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: nowrap;
    }
    
    .task-preview.completed {
        background-color: rgba(76, 175, 80, 0.2);
        text-decoration: line-through;
        opacity: 0.7;
    }
    
    .day-add-btn {
        position: absolute;
        bottom: 4px;
        right: 4px;
        width: 20px;
        height: 20px;
        border-radius: 50%;
        background: var(--hunyadi-yellow);
        color: white;
        border: none;
        font-size: 12px;
        font-weight: bold;
        cursor: pointer;
        display: flex;
        align-items: center;
        justify-content: center;
        opacity: 0;
        transition: all 0.2s ease;
    }
    
    .calendar-grid .day:hover .day-add-btn {
        opacity: 1;
        transform: scale(1.1);
    }
    
    .day-add-btn:hover {
        background: var(--amaranth);
        transform: scale(1.2);
    }
    
    /* Past dates styling */
    .calendar-grid .day.past-date {
        opacity: 0.6;
        background-color: var(--bg-tertiary);
        color: var(--text-muted);
        cursor: pointer;
    }
    
    .calendar-grid .day.past-date:hover {
        opacity: 0.8;
        background-color: var(--bg-secondary);
        box-shadow: var(--shadow-light);
    }
    
    .calendar-grid .day.past-date .day-number {
        color: var(--text-muted);
    }
    
    .calendar-grid .day.past-date .task-preview {
        opacity: 0.7;
    }
    
    /* Calendar Navigation Desktop */
    .calendar-nav {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: var(--spacing-xl);
        padding: var(--spacing-lg);
        background-color: var(--bg-secondary);
        border-radius: var(--radius-lg);
        box-shadow: var(--shadow-light);
    }
    
    .calendar-nav h2 {
        font-size: 2rem;
        font-weight: 600;
        margin: 0;
        color: var(--text-primary);
    }
    
    .calendar-nav button {
        padding: var(--spacing-md) var(--spacing-lg);
        font-size: 1.1rem;
        border-radius: var(--radius-md);
        min-width: 120px;
    }
    
    /* Agenda Desktop Layout */
    #agenda-view {
        display: grid;
        grid-template-columns: 1fr 350px;
        gap: var(--spacing-xl);
        align-items: start;
    }
    
    .agenda-main {
        background-color: var(--bg-primary);
        border-radius: var(--radius-lg);
        padding: var(--spacing-xl);
        box-shadow: var(--shadow-light);
    }
    
    .agenda-sidebar {
        background-color: var(--bg-secondary);
        border-radius: var(--radius-lg);
        padding: var(--spacing-xl);
        box-shadow: var(--shadow-light);
        position: sticky;
        top: var(--spacing-xl);
    }
    
    .agenda-filters {
        display: flex;
        gap: var(--spacing-lg);
        margin-bottom: var(--spacing-xl);
        flex-wrap: wrap;
    }
    
    .agenda-filters select {
        padding: var(--spacing-md);
        font-size: 1rem;
        border-radius: var(--radius-md);
        min-width: 180px;
    }
    
    /* Task List Desktop */
    .task {
        padding: var(--spacing-lg);
        margin-bottom: var(--spacing-md);
        border-radius: var(--radius-lg);
        transition: all 0.3s ease;
        border-left: 4px solid transparent;
    }
    
    .task:hover {
        transform: translateX(4px);
        box-shadow: var(--shadow-medium);
        border-left-color: var(--hunyadi-yellow);
    }
    
    .task.completed {
        background-color: rgba(76, 175, 80, 0.1);
        border-left-color: #4CAF50;
    }
    
    .task.pending {
        background-color: rgba(237, 174, 73, 0.1);
        border-left-color: var(--hunyadi-yellow);
    }
    
    .task-info {
        display: flex;
        justify-content: space-between;
        align-items: center;
        gap: var(--spacing-lg);
    }
    
    .task-buttons {
        display: flex;
        gap: var(--spacing-sm);
        flex-shrink: 0;
    }
    
    .task-buttons button {
        padding: var(--spacing-sm) var(--spacing-md);
        font-size: 0.9rem;
        border-radius: var(--radius-sm);
        transition: all 0.2s ease;
        min-width: 80px;
    }
    
    .task-buttons button:hover {
        transform: translateY(-1px);
        box-shadow: var(--shadow-light);
    }
    
    /* Modal Desktop Improvements */
    .modal-content {
        max-width: 600px;
        width: 90%;
        max-height: 80vh;
        overflow-y: auto;
    }
    
    .export-option {
        padding: var(--spacing-lg);
        margin: var(--spacing-md) 0;
    }
    
    .export-option select,
    .export-option input[type="date"] {
        padding: var(--spacing-md);
        font-size: 1rem;
        min-width: 150px;
    }
    
    /* Navigation Desktop */
    .nav-buttons {
        display: flex;
        gap: var(--spacing-lg);
    }
    
    .nav-buttons button {
        padding: var(--spacing-md) var(--spacing-xl);
        font-size: 1.1rem;
        border-radius: var(--radius-lg);
        min-width: 140px;
        transition: all 0.3s ease;
    }
    
    .nav-buttons button:hover {
        transform: translateY(-2px);
        box-shadow: var(--shadow-medium);
    }
    
    .nav-buttons button.active {
        background: linear-gradient(135deg, var(--hunyadi-yellow), #f4c430);
        color: white;
        box-shadow: var(--shadow-medium);
    }
}

/* Desktop (1024px - 1439px) */
@media (min-width: 1024px) and (max-width: 1439px) {
    header {
        padding: var(--spacing-xl) 4%;
    }
    
    main {
        padding: var(--spacing-xl) 4%;
        max-width: 1200px;
        margin: 0 auto;
    }
    
    .calendar-grid .day {
        min-height: 100px;
        padding: var(--spacing-md);
    }
    
    .calendar-grid {
        gap: var(--spacing-md);
    }
    
    #agenda-view {
        display: block;
    }
    
    .agenda-filters {
        display: flex;
        gap: var(--spacing-md);
        margin-bottom: var(--spacing-lg);
    }
    
    .task {
        padding: var(--spacing-lg);
        overflow: hidden; /* Prevent content overflow */
    }
    
    .task-info {
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        gap: var(--spacing-md);
        width: 100%;
    }
    
    .task-content {
        flex: 1;
        min-width: 0; /* Allow content to shrink */
        overflow: hidden;
    }
    
    .task-buttons {
        display: flex;
        gap: var(--spacing-xs);
        flex-shrink: 0;
        flex-wrap: wrap;
        max-width: 280px; /* Limit button container width */
    }
    
    .task-buttons button {
        padding: var(--spacing-xs) var(--spacing-sm);
        font-size: 0.8rem;
        border-radius: var(--radius-sm);
        cursor: pointer;
        transition: all 0.2s ease;
        min-width: 70px;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }
    
    .modal-content {
        max-width: 500px;
    }
}

/* Tablet Landscape (768px - 1023px) */
@media (min-width: 768px) and (max-width: 1023px) {
    .calendar-grid .day {
        min-height: 80px;
        padding: var(--spacing-sm);
    }
    
    .agenda-filters {
        display: flex;
        gap: var(--spacing-sm);
        flex-wrap: wrap;
    }
    
    .task-info {
        flex-direction: column;
        align-items: flex-start;
        gap: var(--spacing-sm);
    }
    
    .task-buttons {
        align-self: stretch;
        justify-content: space-between;
    }
}

/* High DPI displays */
@media (-webkit-min-device-pixel-ratio: 2), (min-resolution: 192dpi) {
    /* Optimize for retina displays */
    .day-add-btn,
    .close-btn,
    button {
        border: 0.5px solid transparent;
    }
}

/* Form and input optimizations for mobile */
input, textarea, select {
    font-family: inherit;
    font-size: 1rem;
    padding: var(--spacing-md);
    border: 1px solid var(--border-color);
    border-radius: var(--radius-md);
    background-color: var(--bg-primary);
    color: var(--text-primary);
    transition: all 0.2s ease;
    min-height: 48px;
    box-sizing: border-box;
}

input:focus, textarea:focus, select:focus {
    outline: none;
    border-color: var(--hunyadi-yellow);
    box-shadow: 0 0 0 3px rgba(237, 174, 73, 0.1);
}

@media (max-width: 768px) {
    input, textarea, select {
        font-size: 16px; /* Prevents zoom on iOS */
        width: 100%;
    }
}

/* Quick add task form mobile optimization */
.quick-add-form {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-md);
    margin-bottom: var(--spacing-lg);
    padding: var(--spacing-md);
    background-color: var(--bg-tertiary);
    border-radius: var(--radius-md);
    border: 1px solid var(--border-color);
}

@media (max-width: 768px) {
    .quick-add-form {
        gap: var(--spacing-sm);
        padding: var(--spacing-md);
    }
    
    .quick-add-form input {
        min-height: 48px;
        font-size: 16px;
    }
    
    .quick-add-form button {
        min-height: 48px;
        font-size: 1rem;
        font-weight: 600;
    }
}

/* Loading states for better UX */
.loading {
    opacity: 0.6;
    pointer-events: none;
    position: relative;
}

.loading::after {
    content: '';
    position: absolute;
    top: 50%;
    left: 50%;
    width: 20px;
    height: 20px;
    margin: -10px 0 0 -10px;
    border: 2px solid var(--border-color);
    border-top: 2px solid var(--hunyadi-yellow);
    border-radius: 50%;
    animation: spin 1s linear infinite;
}

@keyframes spin {
    0% { transform: rotate(0deg); }
    100% { transform: rotate(360deg); }
}

/* Swipe gestures hint for mobile */
@media (max-width: 768px) {
    .swipe-hint {
        text-align: center;
        color: var(--text-muted);
        font-size: 0.875rem;
        padding: var(--spacing-sm);
        margin-bottom: var(--spacing-md);
    }
}

/* Better focus indicators for accessibility */
button:focus-visible,
.day:focus-visible,
input:focus-visible,
select:focus-visible {
    outline: 2px solid var(--hunyadi-yellow);
    outline-offset: 2px;
}

/* Sticky header on mobile for better navigation */
@media (max-width: 768px) {
    header {
        position: sticky;
        top: 0;
        z-index: 100;
        background-color: rgba(248, 250, 252, 0.95);
        backdrop-filter: blur(10px);
        -webkit-backdrop-filter: blur(10px);
    }
}

/* Accessibility improvements */
@media (prefers-reduced-motion: reduce) {
    * {
        animation-duration: 0.01ms !important;
        animation-iteration-count: 1 !important;
        transition-duration: 0.01ms !important;
    }
}

