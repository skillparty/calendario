/* Enhanced Empty State Design */
.empty-state {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 3rem 2rem;
    text-align: center;
    min-height: 400px;
    background: linear-gradient(135deg,
        rgba(248, 249, 250, 0.9) 0%,
        rgba(237, 174, 73, 0.05) 100%);
    border-radius: 20px;
    border: 2px dashed rgba(237, 174, 73, 0.3);
    margin: 2rem 0;
    position: relative;
    overflow: hidden;
    animation: fadeIn 0.6s ease;
}

@keyframes fadeIn {
    from {
        opacity: 0;
        transform: scale(0.95);
    }
    to {
        opacity: 1;
        transform: scale(1);
    }
}

.empty-state-animation {
    position: relative;
    margin-bottom: 2rem;
}

.empty-state-icon {
    font-size: 4rem;
    opacity: 0.8;
    animation: float 3s ease-in-out infinite;
    position: relative;
    z-index: 2;
}

.empty-state-circles {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 120px;
    height: 120px;
}

.circle {
    position: absolute;
    border: 2px solid rgba(237, 174, 73, 0.2);
    border-radius: 50%;
    animation: pulse 3s ease-in-out infinite;
}

.circle-1 {
    width: 80px;
    height: 80px;
    top: 20px;
    left: 20px;
    animation-delay: 0s;
}

.circle-2 {
    width: 100px;
    height: 100px;
    top: 10px;
    left: 10px;
    animation-delay: 0.5s;
}

.circle-3 {
    width: 120px;
    height: 120px;
    top: 0;
    left: 0;
    animation-delay: 1s;
}

@keyframes float {
    0%, 100% { transform: translateY(0px); }
    50% { transform: translateY(-10px); }
}

@keyframes pulse {
    0%, 100% { 
        transform: scale(1);
        opacity: 0.3;
    }
    50% { 
        transform: scale(1.1);
        opacity: 0.6;
    }
}

.empty-state-title {
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--text-primary);
    margin: 0 0 var(--spacing-md) 0;
    letter-spacing: -0.01em;
}

.empty-state-description {
    font-size: 1rem;
    color: var(--text-secondary);
    margin: 0 0 var(--spacing-xl) 0;
    line-height: 1.6;
    max-width: 400px;
}

.empty-state-btn {
    background: linear-gradient(135deg, var(--hunyadi-yellow), var(--amaranth));
    color: white;
    border: none;
    padding: var(--spacing-md) var(--spacing-xl);
    border-radius: var(--radius-lg);
    font-size: 1rem;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    box-shadow: 0 4px 15px rgba(237, 174, 73, 0.3);
}

.empty-state-btn:hover {
    transform: translateY(-2px) scale(1.05);
    box-shadow: 0 8px 25px rgba(237, 174, 73, 0.4);
}


.btn-primary:hover {
    background: #e5a050;
    transform: translateY(-1px);
    box-shadow: 0 4px 12px rgba(237, 174, 73, 0.3);
}

.btn-secondary {
