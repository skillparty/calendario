    display: grid;
    grid-template-columns: 1fr;
    gap: 12px;
    width: 100%;
    margin-bottom: 16px;
}

.stat-card {
    background: linear-gradient(135deg, 
        rgba(255, 255, 255, 0.9) 0%, 
        rgba(248, 252, 255, 0.8) 100%);
    padding: 20px 16px;
    border-radius: 16px;
    border: 1px solid rgba(255, 255, 255, 0.6);
