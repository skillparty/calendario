        gap: var(--spacing-sm);
        margin-bottom: var(--spacing-xl);
    }
    
    .stat-item {
        background-color: var(--bg-primary);
        padding: var(--spacing-md);
        border-radius: var(--radius-md);
        text-align: center;
        border: 1px solid var(--border-color);
        transition: all 0.3s ease;
    }
    
    .stat-item:hover {
        transform: translateY(-1px);
        box-shadow: var(--shadow-light);
    }
    
    .stat-number {
        display: block;
        font-size: 1.5rem;
        font-weight: 700;
        color: var(--hunyadi-yellow);
        margin-bottom: var(--spacing-xs);
    }
    
    .stat-label {
        font-size: 0.85rem;
        color: var(--text-secondary);
        font-weight: 500;
    }
    
    .upcoming-tasks {
        margin-bottom: var(--spacing-xl);
    }
    
    .upcoming-task {
        background-color: var(--bg-primary);
        padding: var(--spacing-md);
        border-radius: var(--radius-md);
        margin-bottom: var(--spacing-sm);
        border-left: 3px solid var(--hunyadi-yellow);
        cursor: pointer;
        transition: all 0.3s ease;
    }
    
    .upcoming-task:hover {
        transform: translateX(2px);
        box-shadow: var(--shadow-light);
        background-color: var(--mint-green);
    }
    
    .upcoming-task-title {
        font-weight: 500;
        color: var(--text-primary);
        margin-bottom: var(--spacing-xs);
        font-size: 0.9rem;
    }
    
    .upcoming-task-date {
        font-size: 0.8rem;
        color: var(--text-secondary);
        font-weight: 400;
    }
    
    .no-upcoming {
        text-align: center;
        color: var(--text-muted);
        font-style: italic;
        padding: var(--spacing-lg);
        background-color: var(--bg-primary);
        border-radius: var(--radius-md);
        border: 1px dashed var(--border-color);
    }
}

/* Task Content Styles for Desktop */
@media (min-width: 1024px) {
    .task-content {
        flex: 1;
        min-width: 0;
        overflow: hidden;
    }
    
    .task-title {
        margin: 0 0 var(--spacing-xs) 0;
        font-size: 1.1rem;
        font-weight: 500;
        color: var(--text-primary);
        line-height: 1.3;
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: nowrap;
    }
    
    .task-meta {
        margin: 0;
        font-size: 0.9rem;
        color: var(--text-secondary);
        display: flex;
        gap: var(--spacing-md);
        align-items: center;
        overflow: hidden;
    }
    
    .task-date {
        font-weight: 500;
    }
    
    .task-time {
        color: var(--hunyadi-yellow);
        font-weight: 500;
    }
    
    /* Fix task layout to prevent overflow */
    .task {
        display: flex;
        flex-direction: column;
        width: 100%;
        box-sizing: border-box;
    }
    
    .task-info {
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        gap: var(--spacing-md);
        width: 100%;
        box-sizing: border-box;
    }
    
    .task-buttons {
        display: flex;
        gap: var(--spacing-xs);
        flex-shrink: 0;
        flex-wrap: wrap;
        justify-content: flex-end;
        max-width: 300px;
        min-width: 250px;
    }
    
    /* Button Styles */
    .btn-edit {
        background: linear-gradient(135deg, #2196F3, #1976D2);
        color: white;
        border: none;
        padding: var(--spacing-sm) var(--spacing-md);
        border-radius: var(--radius-sm);
        cursor: pointer;
        transition: all 0.2s ease;
        font-size: 0.85rem;
        font-weight: 500;
    }
    
    .btn-toggle {
        background: linear-gradient(135deg, #4CAF50, #388E3C);
        color: white;
        border: none;
        padding: var(--spacing-sm) var(--spacing-md);
        border-radius: var(--radius-sm);
        cursor: pointer;
        transition: all 0.2s ease;
        font-size: 0.85rem;
        font-weight: 500;
    }
    
    .task.completed .btn-toggle {
        background: linear-gradient(135deg, #FF9800, #F57C00);
    }
    
    .btn-delete {
        background: linear-gradient(135deg, #f44336, #d32f2f);
        color: white;
        border: none;
        padding: var(--spacing-sm) var(--spacing-md);
        border-radius: var(--radius-sm);
        cursor: pointer;
        transition: all 0.2s ease;
        font-size: 0.85rem;
        font-weight: 500;
    }
    
    .btn-edit:hover,
    .btn-toggle:hover,
    .btn-delete:hover {
        transform: translateY(-1px);
        box-shadow: var(--shadow-light);
    }
}

/* Dark mode support (optional) */
@media (prefers-color-scheme: dark) {
    :root {
        --bg-primary: #1c1c1e;
        --bg-secondary: #000000;
        --bg-tertiary: #2c2c2e;
        --text-primary: #ffffff;
        --text-secondary: #ebebf5;
        --text-muted: #8e8e93;
        --border-color: #38383a;
    }
}/* MEJORAS FINALES PARA EL LAYOUT DE AGENDA - EQUILIBRIO VISUAL */

/* Agregar estilos espec√≠ficos para .tasks-section */
.tasks-section {
    background: linear-gradient(135deg, 
        rgba(255, 255, 255, 0.9) 0%, 
        rgba(248, 250, 252, 0.95) 100%);
    border-radius: 20px;
    padding: 28px;
    box-shadow: 0 12px 40px rgba(0, 0, 0, 0.08), 
                0 4px 16px rgba(0, 0, 0, 0.04);
