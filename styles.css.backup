/* Media queries espec√≠ficas para layout balanceado */
@media (max-width: 1200px) {
    .agenda-main {
        grid-template-columns: 1fr !important;
        gap: 24px;
    }
    
    .agenda-sidebar {
        order: -1;
    }
}

@media (max-width: 768px) {
    .agenda-filters {
        grid-template-columns: 1fr !important;
        gap: 16px;
    }
    
